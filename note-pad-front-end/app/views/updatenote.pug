extends template

block main
  header
    nav
      p NotePad
      ul 
        li: a(href='/notes?token=' + token) Notes
        li: a(class='button--logout') Logout
  .error-message
  form.form--update
    h1 Update You're Note!
    .form__group
      label.group__label(for='title') Title: 
      input.group__input(id='title' type='text' placeholder='Your title' name='name' value=note.name)
    .form__group
      label.group__label(for='note') Note:
      textarea(id='note' placeholder='Your note' name='text' rows="4" cols="50") #{note.text}
    button Update Note