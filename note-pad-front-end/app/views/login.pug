extends template

block main
  header
    nav
      p NotePad
      ul
        li: a(href='/') Home
        li: a(href='/login') Login
        li: a(href='/register') Sign Up
  form.form--login
    h1 Login
    .error-message
    .form__group
      label.group__label(for="email") Email:
      input.group__input(id="email" type="email" name="email")
    .form__group
      label.group__label(for="password") Password:
      input.group__input(id="password" type="password" name="password")
    button(type="submit") Login